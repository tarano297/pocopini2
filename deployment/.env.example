# Environment Variables برای پوکوپینی

# Django Settings
DEBUG=False
SECRET_KEY=your-very-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database
DB_NAME=pokopini_db
DB_USER=pokopini_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/1

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@pokopini.com

# Security
ADMIN_URL=secure-admin-panel-xyz123/
ADMIN_IP_WHITELIST=127.0.0.1,your-office-ip
TWO_FACTOR_ENABLED=True
REQUIRE_API_KEY_FOR_WRITE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# External Services
SENTRY_DSN=your-sentry-dsn-here

# Backup & Monitoring
BACKUP_ENABLED=True
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# React App
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_SITE_NAME=پوکوپینی
REACT_APP_SITE_URL=http://localhost:3000